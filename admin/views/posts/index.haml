.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:posts, :index)
      %li=link_to pat(:new), url(:posts, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:posts)
    .inner
      %table.table
        %tr
          %th.first=mat(:post, :id)
          %th=mat(:post, :name)
          %th=mat(:post, :body)
          %th=mat(:post, :created_at)
          %th=mat(:post, :updated_at)
          %th.last="&nbsp;"
        -@posts.each do |post|
          %tr
            %td.first=post.id
            %td=post.name
            %td=post.body
            %td=post.created_at
            %td=post.updated_at
            %td.last
              =button_to pat(:edit), url(:posts, :edit, :id => post.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:posts, :destroy, :id => post.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
